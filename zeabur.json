{
  "prebuild": {
    "env": {
      "DEBIAN_FRONTEND": "noninteractive"
    },
    "commands": [
      "apt-get update",
      "apt-get install -y ffmpeg libffmpeg-dev"
    ]
  },
  "build": {
    "commands": [
      "pip install -r requirements.txt"
    ]
  },
  "run": {
    "cmd": "python main.py"
  }
} 